<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/header'); %>
</head>
<body class="container">

<header class="flex-wrap justify-content-center py-3 mb-4 border-bottom " >
  <%- include('partials/nav'); %>
</header>

<main style="min-height:200px">
    <h1>Image Gallery</h1>
    <p>Welcome to Image Processing Application</p>
  <div class="row" data-masonry='{"percentPosition": true }'>
    
    <% gallery.forEach(function(img) { %>
        <div class="col-sm-6 col-lg-4 mb-4">
            <div class="card">
                <img src="/view/<%= img.name %>?format=<%= img.ext %>&width=350" />

                <div class="card-body">
                    <h5 class="card-title"><strong>NAME: </strong> <%= img.name %></h5>
                    <p class="card-text"><strong>FORMAT: </strong><%= img.ext %><br/>
                        <strong>VIEW: </strong><a href="/view/<%= img.name %>?format=<%= img.ext %>">/view/<%= img.name %>?format=<%= img.ext %></a>
                    </p>
                </div>
            </div>
                      
        </div>
    <% }); %>
  </div>
</main>

<footer>
  <%- include('partials/footer'); %>
</footer>

</body>
</html>